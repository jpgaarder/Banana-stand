<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Bluth's Original Frozen Banana Stand</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each banana_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.banana_name}}</pre>
                </div>
                <div class="col-xs-3 text-centered">
                    <form method="POST" action="/bananers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="banana_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">
                            EAT IT!
                        </button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>